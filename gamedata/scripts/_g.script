function abort(msg, ...)
	if not (msg) then return end
	local fmt = tostring(msg)

	if (select('#',...) >= 1) then
		local i = 0
		local p = {...}
		local function sr(a)
			i = i + 1
			if (type(p[i]) == 'userdata') then
				return 'userdata'
			end
			return tostring(p[i])
		end
		fmt = string.gsub(fmt,"%%s",sr)
	end

	if debug and type(debug.traceback) == 'function' then
		fmt = fmt .. debug.traceback('\n', 2)
	end

	get_console():execute("load ~#abort()#:"..fmt)

	--[[
	error(fmt, 2)
	--]]
end

function atexit(error_object, from_error, from_pcall)
	local f = io.stdout
	f:write('\n=== atexit ===\n')
	f:write('  error_object: ', type(error_object),   '\n')
	f:write('  from_error:   ', tostring(from_error), '\n')
	f:write('  from_pcall:   ', tostring(from_pcall), '\n')
	f:write('  tostring(error_object):  \'', tostring(error_object) , '\'\n')
	f:write('=== /atexit ===\n')
	f:flush()
end

